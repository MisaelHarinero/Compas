<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="@dimen/height_margin" android:id="@+id/back">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                app:srcCompat="@android:drawable/ic_partial_secure"
                android:id="@+id/state" android:layout_marginRight="@dimen/nav_header_vertical_spacing"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titleTicket" android:layout_weight="1"
                android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/importance"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/date"
                android:layout_gravity="right|center_horizontal"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/description" android:layout_weight="1"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
        <ImageView
                android:layout_width="@dimen/imageDimensions"
                android:layout_height="@dimen/imageDimensions" app:srcCompat="@color/clear"
                android:id="@+id/imageTicket"
        />
    </LinearLayout>

</LinearLayout>