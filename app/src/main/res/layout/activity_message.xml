<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessageActivity"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbarMssg"
            app:navigationIcon="@drawable/ic_menu_share"/>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="20" android:id="@+id/recycler"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="10dp" android:gravity="center_horizontal|center_vertical">

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_menu_manage"
                android:id="@+id/addImage" android:layout_weight="2"/>
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="10"
                android:background="@color/common_google_signin_btn_text_dark_pressed">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/mmsg"
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/notification_large_icon_height"
                        android:ems="14"
                        android:inputType="textMultiLine"
                        android:maxHeight="@android:dimen/thumbnail_height"
                        android:padding="10dp"
                        android:scrollbars="vertical"/>
            </LinearLayout>
        </ScrollView>

        <ImageButton
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="3dp"
                android:src="@android:drawable/ic_dialog_email"/>

    </LinearLayout>

</LinearLayout>