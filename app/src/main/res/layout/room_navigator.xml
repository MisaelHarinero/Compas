<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="@dimen/fab_margin"
              android:layout_margin="@dimen/activity_vertical_margin" android:background="@color/ColorNotSelected">

    <ImageButton
            android:layout_width="@dimen/imageDimensions"
            android:layout_height="@dimen/imageDimensions"
            android:id="@+id/buttonRoom" android:layout_gravity="center|center_horizontal|center_vertical"
            android:scaleType="centerCrop" android:src="@drawable/database" android:background="@color/clear"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nameRoom" android:textAlignment="center"
            android:layout_gravity="center_vertical" android:textStyle="bold"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"/>
</LinearLayout>