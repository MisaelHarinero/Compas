<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="@dimen/fab_margin">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="@dimen/height_margin"
                android:layout_height="@dimen/height_margin" app:srcCompat="@color/colorBaseCompas"
                android:id="@+id/iconPermisses"
        />
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/userTag"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textStyle="bold|italic"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:fontFamily="@font/oxygen" android:paddingRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/namePermisses" android:textAlignment="center"
            android:fontFamily="@font/oxygen"/>
</LinearLayout>