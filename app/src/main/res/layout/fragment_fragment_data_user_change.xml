<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".view.FragmentDataUserChange"
              android:orientation="vertical" android:padding="@dimen/activity_vertical_margin">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/name"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" android:textSize="18sp"
                    android:fontFamily="@font/oxygen"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/surname" android:textSize="18sp"
                    android:fontFamily="@font/oxygen"/>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/email" android:textAlignment="center"
                android:textStyle="bold" android:textSize="18sp" android:fontFamily="@font/oxygen"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tag" android:textAlignment="center"
                android:fontFamily="@font/oxygen"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/date" android:textAlignment="center"
                android:fontFamily="@font/oxygen"/>
        <ImageButton
                android:layout_width="@dimen/button_height_width"
                android:layout_height="@dimen/button_height_width" android:id="@+id/image"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter" android:background="@color/clear"/>
    </LinearLayout>

</LinearLayout>