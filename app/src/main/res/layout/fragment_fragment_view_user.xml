<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".view.FragmentViewUser"
              android:orientation="vertical" android:padding="@dimen/height_margin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="@string/fragment_user_admin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@color/ColorNotSelected"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_user_add_new_user_tag" android:paddingRight="@dimen/fab_margin"
                android:textStyle="bold" android:textSize="18sp" android:fontFamily="@font/oxygen"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tag" android:textSize="18sp"
                android:textStyle="bold" android:fontFamily="@font/oxygen"/>
    </LinearLayout>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/permissesSpin"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:src="@android:drawable/ic_menu_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/delete" android:layout_weight="1"
                android:background="@color/clear"/>
        <ImageButton
                android:src="@android:drawable/ic_menu_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/saveChanges" android:background="@color/clear"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>